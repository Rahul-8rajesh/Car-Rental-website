// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Car {
  id           String   @id @default(cuid())
  name         String
  model        String?
  // പുതിയ ഫീച്ചറുകൾ
  category     String   @default("Cars") // Options: "Cars", "Pickup", "Travels"
  subCategory  String?  // Options: "SUV", "Sedan", "Hatchback", "Electric" (Only for Cars)
  transmission String   @default("Manual") // "Auto", "Manual"
  price        Float
  image        String?
  isAvailable  Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// സൈറ്റിലെ ഫോൺ നമ്പർ, അഡ്രസ്സ് മാറ്റാൻ
model SiteSettings {
  id           String   @id @default(cuid())
  companyName  String   @default("Shijin P.S Cars")
  phoneNumber  String   @default("919876543210") // WhatsApp നമ്പറും ഇത് തന്നെ
  address      String?
  heroTitle    String   @default("Find Your Perfect Drive")
}

model Booking {
  id           String   @id @default(cuid())
  customerName String
  phoneNumber  String
  vehicleName  String
  details      String?  // Trip type, location etc.
  createdAt    DateTime @default(now())
}